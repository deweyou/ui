{
  "name": "@deweyou-ui/react",
  "type": "module",
  "version": "0.1.0",
  "description": "React UI components for Deweyou UI.",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./button.css": "./dist/styles/button.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && vite build && node ./scripts/fix-css-path.mjs && pnpm run types",
    "types": "tsc -p tsconfig.build.json",
    "lint": "pnpm run lint:eslint && pnpm run lint:style",
    "lint:fix": "pnpm run lint:eslint:fix && pnpm run lint:style:fix",
    "lint:eslint": "eslint ./src",
    "lint:eslint:fix": "eslint ./src --fix",
    "lint:style": "stylelint \"src/**/*.{css,scss}\"",
    "lint:style:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "pre-commit": "pnpm run lint:fix",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@deweyou-ui/styles": "workspace:*",
    "classnames": "^2.5.1"
  }
}
